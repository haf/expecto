<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Name and AssemblyName are required because albacore fails without it -->
    <Name>Expecto.netcore.Tests</Name>
    <AssemblyName>Expecto.netcore.Tests</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net461; netcoreapp1.1</TargetFrameworks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <DefineConstants>
      RESHAPED_THREAD_CULTURE;
      $(DefineConstants)
    </DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Prelude.fs" />
    <Compile Include="Tests.fs" />
    <Compile Include="SummaryTests.fs" />
    <Compile Include="FocusedTests.fs" />
    <Compile Include="FsCheckTests.fs" />
    <Compile Include="BenchmarkDotNetTests.fs" />
    <Compile Include="Main.fs" />
    <None Include="Tests.fsx" />
    <None Include="paket.references" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FSharp.NET.Sdk" Version="1.0.*" PrivateAssets="All" />
    <ProjectReference Include="../Expecto/Expecto.fsproj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Expecto.FsCheck\Expecto.FsCheck.fsproj" />
    <ProjectReference Include="..\Expecto.BenchmarkDotNet\Expecto.BenchmarkDotNet.fsproj" />
  </ItemGroup>
  <Import Project="..\.paket\Paket.Restore.targets" />
</Project>
